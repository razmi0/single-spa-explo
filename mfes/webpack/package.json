{
    "name": "@Razmio/webpack",
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "start": "cross-env NODE_ENV=development BABEL_ENV=development webpack serve --port 3001",
        "start:standalone": "cross-env NODE_ENV=development BABEL_ENV=development webpack serve --env standalone",
        "build": "concurrently npm:build:*",
        "build:webpack": "cross-env NODE_ENV=production webpack --mode=production",
        "preview": "npm run build:webpack && npx http-server dist -p 3001 --cors -c-1",
        "analyze": "cross-env NODE_ENV=production webpack --mode=production --env analyze",
        "lint": "eslint src",
        "format": "prettier --write .",
        "check-format": "prettier --check .",
        "test": "cross-env BABEL_ENV=test jest",
        "watch-tests": "cross-env BABEL_ENV=test jest --watch",
        "prepare": "husky install || true",
        "coverage": "cross-env BABEL_ENV=test jest --coverage",
        "build:types": "tsc"
    },
    "devDependencies": {
        "@babel/core": "^7.23.3",
        "@babel/plugin-transform-runtime": "^7.23.3",
        "@babel/preset-env": "^7.23.3",
        "@babel/preset-react": "^7.23.3",
        "@babel/preset-typescript": "^7.23.3",
        "@babel/runtime": "^7.23.3",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.6.2",
        "@testing-library/jest-dom": "^6.6.3",
        "concurrently": "^6.2.1",
        "cross-env": "^7.0.3",
        "@eslint/js": "^9.19.0",
        "eslint": "^9.19.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "globals": "^15.14.0",
        "typescript-eslint": "^8.23.0",
        "husky": "^7.0.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.5.1",
        "jest-cli": "^27.5.1",
        "prettier": "^2.3.2",
        "pretty-quick": "^3.1.1",
        "react-refresh": "^0.18.0",
        "ts-config-single-spa": "^3.0.0",
        "typescript": "^5.3.5",
        "webpack": "^5.89.0",
        "webpack-cli": "^4.10.0",
        "webpack-config-single-spa-react-ts": "^8.0.0",
        "webpack-dev-server": "^4.0.0",
        "webpack-merge": "^5.8.0",
        "@types/jest": "^27.0.1",
        "@types/react": "^18.3.1",
        "@types/react-dom": "^18.3.1",
        "@types/systemjs": "^6.1.1",
        "@types/webpack-env": "^1.16.2"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "single-spa": "^5.9.3",
        "single-spa-react": "^6.0.2"
    },
    "types": "dist/Razmio-webpack.d.ts"
}
