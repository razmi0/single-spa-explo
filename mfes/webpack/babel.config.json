{
    "presets": [
        "@babel/preset-env",
        [
            "@babel/preset-react",
            {
                "runtime": "automatic"
            }
        ],
        "@babel/preset-typescript"
    ],
    "plugins": [
        [
            "@babel/plugin-transform-runtime",
            {
                "useESModules": true,
                "regenerator": false
            }
        ]
    ],
    "env": {
        "development": {
            "plugins": ["react-refresh/babel"]
        },
        "test": {
            "presets": [
                [
                    "@babel/preset-env",
                    {
                        "targets": "current node"
                    }
                ]
            ]
        }
    }
}
